<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.datasource">java:/comp/env/jdbc/hibernate_test</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- List of XML mapping files -->
        <mapping resource="User.hbm.xml"/>
        <mapping resource="Organization.hbm.xml"/>
        <mapping resource="Privilege.hbm.xml"/>
        <mapping resource="News.hbm.xml"/>
        <mapping resource="Attachment.hbm.xml"/>
        <mapping resource="Document.hbm.xml"/>
        <mapping resource="DocumentLibrary.hbm.xml"/>
        <mapping resource="Announcement.hbm.xml"/>
        <mapping resource="Message.hbm.xml"/>

    </session-factory>
</hibernate-configuration>