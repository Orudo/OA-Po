<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>LoginProcess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addEmployee</servlet-name>
        <servlet-class>addEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getOrganization_employee</servlet-name>
        <servlet-class>GetOrganization_Employee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getOrganizationEntry_employee</servlet-name>
        <servlet-class>GetOrganizationEntry_Employee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendMessage</servlet-name>
        <servlet-class>SendMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getMessageInbox</servlet-name>
        <servlet-class>GetInbox</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetMessageDetail</servlet-name>
        <servlet-class>GetMessageDetail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/servlet/loginprocess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendMessage</servlet-name>
        <url-pattern>/servlet/SendMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetMessageDetail</servlet-name>
        <url-pattern>/servlet/getMessageDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getMessageInbox</servlet-name>
        <url-pattern>/servlet/getMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getOrganization_employee</servlet-name>
        <url-pattern>/servlet/getOrganization_employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getOrganizationEntry_employee</servlet-name>
        <url-pattern>/servlet/getOrganizationEntry_employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>addEmployee</servlet-name>
    <url-pattern>/servlet/addEmployee</url-pattern>
</servlet-mapping>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/hibernate_test</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>


